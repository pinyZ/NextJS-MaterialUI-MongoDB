{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react-hooks/exhaustive-deps": "off"
  },
  "overrides": [
    {
      "files": [
        "pages/**/*.stories.js",
        "components/**/*.stories.js"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}
